<div onclick="window.location.href = '/p/<%= @program.id %>';">
<div id="page-header" style="background-image: url('<%= @program.banner.attached? ? url_for(@program.banner) : asset_path('header-background.jpg') %>');">
  New Tip
</div>
</div>
<div id="flex-container">
 <div id="column2" class="flex-item"><%= form_tag tips_path, :method => :post do %>
    <table class="tip-edit-table">
        <tbody>
            <tr>
                <td class="tip-edit-label"><%= label :tip, :tip, 'Tip:' %></td>
                <td><%= text_area :tip, :tip, :required => true %></td>
            </tr>
            <tr>
                <td colspan="2" class="tip-edit-submit"><%= submit_tag 'Save' %></td>
            </tr>
        </tbody>
    </table>
 <% end %></div>
</div>