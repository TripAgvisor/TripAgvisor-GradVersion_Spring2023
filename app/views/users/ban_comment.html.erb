<div id="page-header">User: <%= @user.name %></div>
<form>
  <h1>Ban Reasons</h1>

  <label>
    <input type="checkbox" name="option1">
    Violation of Community guidelines:
  </label>

  <label>
    <input type="checkbox" name="option2">
    Inappropriate Post:
  </label>

  <label>
    <input type="checkbox" name="option3">
    Repeated Violations:
  </label>

  <label>
    <input type="checkbox" name="option4">
    Other:
  </label>

  <label for="comment">Comment:</label>
  <textarea id="comment" name="comment"></textarea>

  
  <%= link_to 'Submit', :controller => :users, :action => :ban, :class => 'btn'  %>
  <%= link_to 'Cancel', users_path %>

</form>

<style>
    form {
      width: 400px;
      margin: 0 auto;
      padding: 20px;
      border: transparent;
      border-radius: 5px;
    }
    
    h1 {
      margin-top: 40px;
      text-align: center;
    }
    
    label {
      display: block;
      margin-bottom: 10px;
    }
    
    input[type="checkbox"] {
      margin-right: 10px;
    }
    
    textarea {
      width: 100%;
      height: 150px;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    
    .btn {
      display: inline-block;
      background-color: #007bff;
      color: #fff;
      border-radius: 4px;
      padding: 8px 16px;
      text-decoration: none;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease-in-out;
    }
    
    .btn:hover {
      background-color: #0069d9;
    }
</style>